---
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";
import Header from "../sections/Header/Header.astro";
import Main from "../sections/Main/Main.astro";
import Footer from "../sections/Footer/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800 dark:bg-gradient-to-r dark:from-gray-800 dark:to-gray-900 dark:text-white"
  >
    <Header />
    <Main>
      <slot />
    </Main>

    <!-- TODO: Implement Real Footer -->
    <!-- <Footer /> -->
  </body>
</html>
